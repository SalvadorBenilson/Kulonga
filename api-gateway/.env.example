# SQL Server Configuration
SQL_SERVER_HOST=sqlserver
SQL_SERVER_PORT=1433
SQL_SERVER_SA_PASSWORD=YourPassword123!
SQL_SERVER_DATABASE=ApiGatewayDb

# API Gateway Configuration
ASPNETCORE_ENVIRONMENT=Production
API_GATEWAY_PORT=5230
API_GATEWAY_URLS=http://+:5230

# Connection String (automatically constructed from above)
